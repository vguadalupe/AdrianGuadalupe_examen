<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdrianGuadalupe_examen.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Registro" BackgroundColor="Aqua" TextColor="Blue"></Label>
            <Label x:Name="lbluser"></Label>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Button Grid.Row="0" Grid.Column="0" x:Name="btnGuardar" Text="Guardar" Clicked="btnGuardar_Clicked" />
                <Button Grid.Row="0" Grid.Column="1" x:Name="btnResumen" Text="Resumen" Clicked="btnResumen_Clicked" />
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>