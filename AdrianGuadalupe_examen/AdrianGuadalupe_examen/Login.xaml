<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdrianGuadalupe_examen.Login">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"></Image>
            <Label Text="Login" BackgroundColor="Aqua" TextColor="Blue"></Label>

            <Entry x:Name="txtUser"
               Placeholder="Ingrese Usuario"/>
            <Entry x:Name="txtPassword"
               Placeholder="Ingrese Contraseña" 
               IsPassword="True"/>

            <Button x:Name="btnAbrirRegistro" Text="Ingresar" Clicked="btnAbrirRegistro_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>